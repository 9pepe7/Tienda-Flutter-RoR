
<p id="notice"><%= notice %></p>
<h3><a class='inicio' href="/DS11">Inicio</a></h3><br>
<% if logged_in? %>

<h1>Clientes</h1>

<table>
  <thead>
    <tr class="cabecera_tabla">
    <th>Id</th>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr class="datos_tabla">
        <td><%= cliente.id %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellidos %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to 'Mostrar', cliente, class: "btn4" %></td>
        <td><%= link_to 'Editar información', edit_cliente_path(cliente), class: "btn4" %></td>
        <td><%= link_to 'Banear', cliente, method: :delete, data: { confirm: '¿Seguro que quieres eliminar el usuario?' }, class: "btn4" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>